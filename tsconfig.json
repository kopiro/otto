
{
  "compilerOptions": {
    "strict": false,

    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "resolveJsonModule": true,
    "outDir": "build"
  },
  "include": ["./src/**/*"]
}
