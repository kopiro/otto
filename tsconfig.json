{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",

    "strict": false,
    "resolveJsonModule": true,
    "outDir": "build"
  },
  "include": ["./src/**/*"]
}
