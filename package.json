{
  "name": "otto-ai",
  "version": "3.0.0",
  "description": "Simple AI for Otto",
  "engine": ">=13",
  "workspaces": [
    "src/packages/*",
    "src/lib/*",
    "src-client"
  ],
  "bin": {
    "otto": "build/cli.ts"
  },
  "main": "build/index.js",
  "private": true,
  "scripts": {
    "build": "yarn build:server && yarn build:client",
    "start": "node build",
    "start:pi": "play ./etc/boot.wav; yarn start",
    "start:dev": "nodemon",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "yarn lint --fix",
    "unitest": "jest src --passWithNoTests",
    "test": "yarn lint && yarn unitest",
    "build:server": "tsc",
    "build:client": "yarn workspace otto-web-client build",
    "build:docker": "docker build . -t kopiro/otto",
    "deploy:docker": "yarn build:docker && docker push kopiro/otto",
    "configure:oauth": "ts-node ./src/cli/oauth.ts"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kopiro/otto-ai.git"
  },
  "author": "Flavio De Stefano <destefano.flavio@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/kopiro/otto-ai#readme",
  "bugs": {
    "url": "https://github.com/kopiro/otto-ai/issues"
  },
  "dependencies": {
    "@google-cloud/dialogflow": "^4.7.0",
    "@google-cloud/speech": "^4.10.2",
    "@google-cloud/storage": "^5.0.0",
    "@google-cloud/text-to-speech": "^3.4.0",
    "@google-cloud/translate": "^6.3.1",
    "@picovoice/porcupine-node": "^1",
    "@sentry/node": "^5.15.4",
    "@types/node-fetch": "^2.5.10",
    "@types/node-telegram-bot-api": "^0.51.1",
    "aws-sdk": "^2.349.0",
    "cheerio": "^1.0.0-rc.9",
    "commander": "^5.0.0",
    "detect-rpi": "^1.4.0",
    "diacritics": "^1.3.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.5.1",
    "fast-levenshtein": "^2.0.6",
    "fb": "^2.0.0",
    "formidable": "^1.2.2",
    "google-images": "^2.0.0",
    "googleapis": "^74.0.0",
    "moment": "^2.22.2",
    "mongoose": "^6.0.13",
    "mongoose-autopopulate": "^0.16.0",
    "node-fetch": "^2",
    "node-record-lpcm16": "^1.0.1",
    "node-telegram-bot-api": "^0.40.0",
    "pb-util": "^0.1.3",
    "request": "^2.88.0",
    "signale": "^1.4.0",
    "socket.io": "^2.5.0",
    "transmission": "^0.4.9",
    "ts-node": "^9.1.1",
    "typescript": "^4.5.5",
    "uuid": "^8.3.2",
    "wav-file-info": "^0.0.8"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^26.0.20",
    "@types/mocha": "^8.2.1",
    "@types/mongoose-autopopulate": "^0.10.1",
    "@types/node": "^18.7.16",
    "@types/signale": "^1.4.4",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.3"
  },
  "optionalDependencies": {
    "apa102-spi": "0.0.6",
    "rpio": "^2.1.1"
  }
}
